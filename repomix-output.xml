                  <div className={`rounded-lg bg-gradient-to-r ${step.color} p-3 text-white h-fit`}>
                    <Icon className="h-6 w-6" />
                  </div>
                  <div>
                    <h3 className="text-xl font-semibold mb-1">
                      {index + 1}. {step.title}
